<Window x:Class="CustomElementsTeamTasker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomElementsTeamTasker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="local:Command.Clear" Executed="clear_handler"/>
    </Window.CommandBindings>
    <Grid local:UserSlider.ValueChanged="handler">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:UserSlider Grid.Row="0" x:Name="MySlider1">
            <local:UserSlider ValueChanged="handler"/>
        </local:UserSlider>
        <local:UserSlider Grid.Row="1" x:Name="MySlider2"/>
        <TextBox Grid.Row="2" x:Name="MyText" />
    </Grid>
</Window>
